<div class="p-3 px-6 min-h-48 flex justify-center items-center">
  <div class="flex flex-col max-w-md p-6 rounded-md sm:p-10 bg-gray-50 text-gray-800">
    <div class="mb-8 text-center">
      <h1 class="my-3 text-4xl font-bold">登入</h1>
      <p class="text-sm text-gray-600">輸入資訊以登入帳號</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-12 ng-untouched ng-pristine ng-valid") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, "電子信箱", class: "block mb-2 text-sm" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800" %>
        </div>
        <div>
          <%= f.label :password, "密碼", class: "text-sm" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800" %>
        </div>
      </div>
      <div class="space-y-2">
        <br/>
        <div>
          <%= f.submit "登入", class: "w-full px-8 py-3 rounded-md bg-violet-600 text-gray-50" %>
        </div>
        <p class="px-6 text-sm text-center text-gray-600">還沒有帳號?
          <%= link_to "註冊", new_user_registration_path, class: "hover:underline text-violet-600" %>
        </p>
      </div>

    <% end %>
  </div>
</div>
