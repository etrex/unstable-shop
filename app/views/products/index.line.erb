<%= raw(Kamiflex.build(self) do
  bubble do
    body do
      horizontal_box do
        text "🍔", flex: 0, action: message_action("/")
        text "Products", weight: "bold", margin: "sm"
        text "new", align: "end", action: uri_action(liff_path(path: new_product_path)), color: "#0000ee"
      end
      separator
      if @products.present?
        vertical_box margin: "lg" do
          horizontal_box margin: "lg" do
            text "Name", weight: "bold"
            text "action", align: "end"
          end
          horizontal_box @products, margin: "lg" do |product|
            text product.name, action: message_action("GET /products/#{product.id}")
            text "❌", align: "end", action: message_action("DELETE /products/#{product.id}")
          end
        end
      else
        text "沒有目前內容", margin: "lg"
      end
    end
  end
end )%>