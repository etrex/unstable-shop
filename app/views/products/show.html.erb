<h1 class="text-4xl font-bold">商品詳細資料</h1>

<section class="bg-gray-100 text-gray-800">
  <div class="container max-w-6xl p-6 mx-auto space-y-6 sm:space-y-12">
    <div class="block max-w-sm gap-3 mx-auto sm:max-w-full group hover:no-underline focus:no-underline lg:grid lg:grid-cols-12 bg-gray-50">
      <img src="<%= @product.image_url %>" alt="" class="object-cover w-full rounded lg:col-span-7 bg-gray-500">
      <div class="p-6 space-y-2 lg:col-span-5">
        <h3 class="text-2xl font-semibold sm:text-4xl group-hover:underline group-focus:underline"><%= @product.name %></h3>
        <span class="text-xs text-gray-600">熱賣中</span>
        <br/>
        <br/>
        <p><%= @product.description %></p>
        <br/>
        <div class="text-right">
          <p class="text-lg font-semibold">$ <%= @product.price %></p>
        </div>
        <div class="text-right">
          <%= button_to "加入購物車", cart_path(product_id: @product.id, quantity: 1), method: :put, class: "px-8 py-3 text-lg font-semibold rounded bg-violet-600 text-gray-50" %>
        </div>
      </div>
    </div>
  </div>
</section>
