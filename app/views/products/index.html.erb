<h1 class="text-4xl font-bold">商品列表</h1>

<div class="grid grid-cols-4 gap-4">
  <% @products.each do |product| %>
    <div class="rounded-lg shadow-lg bg-white max-w-sm">
      <a href="#">
        <img class="rounded-t-lg aspect-square" src="<%= product.image_url %>" alt=""/>
      </a>
      <div class="p-6">
        <h5 class="text-gray-900 text-xl font-medium mb-2"><%= product.name %></h5>
        <p class="text-gray-700 text-base mb-4">
          <%= show_description(product) %>
        </p>
        <div class="text-right">
          <%= link_to "去看看", product, method: :get, class: "inline-block px-6 py-2.5 bg-purple-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>